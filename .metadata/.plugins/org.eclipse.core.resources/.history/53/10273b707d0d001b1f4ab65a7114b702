		response.setContentType("text/html");
		RequestDispatcher requestDispatcher = null;
		PrintWriter out = response.getWriter();
		
		out.print("<article>");
		out.print("<h1 class='subHeading1'>User Information</h1>");
		out.print("<table><tr><th>User Role</th><td>"+user.getRole().getRole()+"</td></tr></table>");
