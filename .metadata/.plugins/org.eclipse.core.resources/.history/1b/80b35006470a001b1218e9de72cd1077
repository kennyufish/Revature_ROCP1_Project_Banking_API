package com.app.banking.controller;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import com.app.banking.exception.BusinessException;
import com.app.banking.exception.UserException;
import com.app.banking.model.User;
import com.app.banking.service.UserInfoService;
import com.app.banking.service.UserInfoServiceImpl;

/**
 * Servlet implementation class UserInfoController
 */
public class UserInfoController extends HttpServlet {
	private static final long serialVersionUID = 1L;

	/**
	 * @see HttpServlet#HttpServlet()
	 */
	public UserInfoController() {
		super();
		// TODO Auto-generated constructor stub
	}

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse
	 *      response)
	 */

	protected void service(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {

		response.setContentType("text/html");
		HttpSession session = request.getSession(false);
		UserInfoService service = new UserInfoServiceImpl();
		RequestDispatcher requestDispatcher = null;
		PrintWriter out = response.getWriter();
		
		//debug
		System.out.println("session id in UserController:" + session.getId());
		System.out.println(session.getAttribute("user").toString());
		//
		
		try {
			User userSession = (User) session.getAttribute("user");
			User user = service.getUserInfo(userSession.getUsername(), userSession.getPassword());
			requestDispatcher = request.getRequestDispatcher("userInfo.html");
			requestDispatcher.include(request, response);
			out.print("<article><h1>");
			out.print("<table>");
			

			out.print("</td><tr>");
			out.print("<tr><td>User Role</td><td>");
			out.print(user.getRole().getRole());
			out.print("</td><tr>");
			out.print("<tr><td>User ID</td><td>");
			out.print(user.getUserId());
			out.print("</td><tr>");
			out.print("<tr><td>Username</td><td>");
			out.print(user.getUsername());
			out.print("</td><tr>");
			out.print("<tr><td>User Password</td><td>");
			out.print("<input type='password' name='firstName' value='");
			out.print(user.getPassword()()+"'>");
			out.print("</td><tr>");
			out.print("<tr><td>User First Name</td><td>");
			out.print("<input type='text' name='firstName' value='");
			out.print(user.getFirstName()+"'>");
			out.print("</td><tr>");
			out.print("<tr><td>User Last Name</td><td>");
			out.print("<input type='text' name='lastName' value='");
			out.print(user.getLastName()+"'>");
			out.print("</td><tr>");
			out.print("<tr><td>User Email</td><td>");
			out.print("<input type='text' name='email' value='");
			out.print(user.getEmail()+"'>");
			
			out.print("</table>");
			out.print("</h1></article>");
			
			
		} catch (BusinessException e) {
			requestDispatcher = request.getRequestDispatcher("index.html");
			requestDispatcher.include(request, response);
			out.print("<center><span style='color:red;'>" + e.getMessage() + "</span></center>");
		} catch (UserException e) {
			requestDispatcher = request.getRequestDispatcher("index.html");
			requestDispatcher.include(request, response);
			out.print("<center><span style='color:red;'>" + e.getMessage() + "</span></center>");
		} catch (NullPointerException e) {
			requestDispatcher = request.getRequestDispatcher("index.html");
			requestDispatcher.include(request, response);
			out.print("<center><span style='color:red;'>" + e.getMessage() + "</span></center>");
		}
	}

}
